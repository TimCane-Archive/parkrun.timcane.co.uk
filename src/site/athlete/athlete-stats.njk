---
permalink: athlete/{{ athlete.Name | slug }}/stats/index.html
layout: page

pagination:
    data: parkrun.athletes
    size: 1
    alias: athlete
---

<h1>{{athlete.Name}}
    <small>{{athlete.TotalRuns}} total runs!</small>
</h1>

<table>
    <caption>Summary Stats</caption>
    <thead>
        <tr>
            <th></th>
            <th>Fastest</th>
            <th>Average <br>(mean)</th>
            <th>Slowest</th>
        </tr>
    </thead>
    <tbody>
        {% set time = athlete.Summary.Time %}
        {% if time %}
            <tr class="time">
                <td>Time</td>
                <td>{{time.Fastest | time}}</td>
                <td>{{time.Average | time}}</td>
                <td>{{time.Slowest | time}}</td>
            </tr>
        {% else %}
            <tr class="time empty">
                <td colspan="4">Nothing to show</td>
            </tr>
        {% endif %}
        {% set grade = athlete.Summary.AgeGrade %}
        {% if grade %}
            <tr class="grade">
                <td>Age Grade</td>
                <td>{{grade.Fastest}}%</td>
                <td>{{grade.Average}}%</td>
                <td>{{grade.Slowest}}%</td>
            </tr>
        {% else %}
            <tr class="grade empty">
                <td colspan="4">Nothing to show</td>
            </tr>
        {% endif %}
        {% set oPos = athlete.Summary.OverallPosition %}
        {% if oPos %}
            <tr class="overall-pos">
                <td>Overall Position</td>
                <td>{{oPos.Fastest}}</td>
                <td>{{oPos.Average}}</td>
                <td>{{oPos.Slowest}}</td>
            </tr>
        {% else %}
            <tr class="overall-pos empty">
                <td colspan="4">Nothing to show</td>
            </tr>
        {% endif %}
    </tbody>
</table>

<table>
    <caption>Best Annual Achievements</caption>
    <thead>
        <tr>
            <th>Year</th>
            <th>Best Time</th>
            <th>Best Age Grading</th>
        </tr>
    </thead>
    <tbody>
        {% for row in athlete.Achievements %}
            <tr>
                <td>{{row.Year}}</td>
                <td>{{row.BestTime | time}}</td>
                <td>{{row.BestGrade}}%</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nothing to show</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<table>
    <caption>Course Summaries</caption>
    <thead>
        <tr>
            <th>Course</th>
            <th>Runs</th>
            <th>Best Position</th>
            <th>Best Time</th>
        </tr>
    </thead>
    <tbody>
        {% for row in athlete.Events %}
            <tr>
                <td>
                    <a href="/course/{{row.Event | slug }}">{{row.Event}}</a>
                </td>
                <td>{{row.Runs}}</td>
                <td>{{row.BestPosition}}</td>
                <td>{{row.BestTime | time}}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nothing to show</td>
            </tr>
        {% endfor %}
    </tbody>
</table>