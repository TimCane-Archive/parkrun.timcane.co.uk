---
permalink: "{{ hyperlink.athlete }}/{{ athlete.Name | slug }}/stats/index.html"
layout: page

pagination:
    data: parkrun.athletes
    size: 1
    alias: athlete
---

<h1>{{athlete.Name}}
    <small>{{athlete.TotalRuns}} total runs!</small>
</h1>

<table>
    <thead>
        <tr>
            <th class="center" colspan="4">
                <h2>Summary Stats</h2>
            </th>
        </tr>
        <tr>
            <th class="left"></th>
            <th class="center">Fastest</th>
            <th class="center">Average <br>(mean)</th>
            <th class="center">Slowest</th>
        </tr>
    </thead>
    <tbody>
        {% set time = athlete.Summary.Time %}
        {% if time %}
            <tr class="time">
                <td class="left">Time</td>
                <td class="center">{{time.Fastest | time}}</td>
                <td class="center">{{time.Average | time}}</td>
                <td class="center">{{time.Slowest | time}}</td>
            </tr>
        {% else %}
            <tr class="time empty">
                <td class="center" colspan="4">Nothing to show</td>
            </tr>
        {% endif %}
        {% set grade = athlete.Summary.AgeGrade %}
        {% if grade %}
            <tr class="grade">
                <td class="left">Age Grade</td>
                <td class="center">{{grade.Fastest}}%</td>
                <td class="center">{{grade.Average}}%</td>
                <td class="center">{{grade.Slowest}}%</td>
            </tr>
        {% else %}
            <tr class="grade empty">
                <td class="center" colspan="4">Nothing to show</td>
            </tr>
        {% endif %}
        {% set oPos = athlete.Summary.OverallPosition %}
        {% if oPos %}
            <tr class="overall-pos">
                <td class="left">Overall Position</td>
                <td class="center">{{oPos.Fastest}}</td>
                <td class="center">{{oPos.Average}}</td>
                <td class="center">{{oPos.Slowest}}</td>
            </tr>
        {% else %}
            <tr class="overall-pos empty">
                <td class="center" colspan="4">Nothing to show</td>
            </tr>
        {% endif %}
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th class="center" colspan="3">
                <h2>Best Annual Achievements</h2>
            </th>
        </tr>
        <tr>
            <th class="center">Year</th>
            <th class="center">Best Time</th>
            <th class="center">Best Age Grading</th>
        </tr>
    </thead>
    <tbody>
        {% for row in athlete.Achievements %}
            <tr>
                <td class="center">{{row.Year}}</td>
                <td class="center">{{row.BestTime | time}}</td>
                <td class="center">{{row.BestGrade}}%</td>
            </tr>
        {% else %}
            <tr>
                <td class="center" colspan="3">Nothing to show</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th class="center" colspan="4">
                <h2>Course Summaries</h2>
            </th>
        </tr>
        <tr>
            <th class="left">Course</th>
            <th class="center">Runs</th>
            <th class="center">Best Position</th>
            <th class="center">Best Time</th>
        </tr>
    </thead>
    <tbody>
        {% for row in athlete.Events %}
            <tr>
                <td class="left">
                    <a href="/{{ hyperlink.event }}/{{row.Event | slug }}">{{row.Event}}</a>
                </td>
                <td class="center">{{row.Runs}}</td>
                <td class="center">{{row.BestPosition}}</td>
                <td class="center">{{row.BestTime | time}}</td>
            </tr>
        {% else %}
            <tr>
                <td class="center" colspan="3">Nothing to show</td>
            </tr>
        {% endfor %}
    </tbody>
</table>