---
permalink: "{{ hyperlink.athlete }}/index.html"
layout: page

eleventyComputed:
    title: "Runners"
---
<table class="sticky">
    <thead>
        <tr>
            <th class="center" colspan="4">
                <h1>Runners</h1>
            </th>
        </tr>
        <tr>
            <th class="left">Name</th>
            <th class="center">Total Runs</th>
            <th class="center">Best Time</th>
            <th class="center">Average Time</th>
        </tr>
    </thead>
    <tbody>
        {% for athlete in parkrun.athletes %}
            <tr>
                <td data-label="Name" class="left">
                    <a href="/{{ hyperlink.athlete }}/{{athlete.Name | slug}}">{{athlete.Name}}</a>
                </td>
                <td data-label="Total Runs" class="center">{{athlete.TotalRuns}}</td>
                <td data-label="Best Time" class="center">{{athlete.Summary.Time.Fastest | time}}</td>
                <td data-label="Average Time" class="center">{{athlete.Summary.Time.Average | time}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>