---
layout: page

title: Home
---

<table class="sticky">
    <thead>
        <tr>
            <th colspan="7" class="center">
                <h1>
                    Latest
                </h1>
            </th>
        </tr>
        <tr>
            <th class="left">
                Athlete
            </th>
            <th class="left">
               Course
            </th>
            <th class="center">
                Run #
            </th>
            <th class="center">
                Position
            </th>
            <th class="center">
                Time
            </th>
            <th class="center">
                Age Grade
            </th>
            <th class="center">
                PB?
            </th>
        </tr>
    </thead>
    <tbody>
        {% set cls = cycler("odd", "even") %}
        {% for run in parkrun.latestRuns %}
            <tr class="title">
                <th class="center" colspan="7">
                    {{run.Date | date("dS mmmm yyyy")}}
                </th>
            </tr>
            {% for row in run.Results %}
                <tr class="{{ cls.next() }}">
                    <td data-label="Athlete" class="left">
                        <a href="/{{ hyperlink.athlete }}/{{row.AthleteName | slug }}">{{row.AthleteName}}</a>
                    </td>
                    <td data-label="Course" class="left">
                        <a href="/{{ hyperlink.event }}/{{row.Event | slug }}">{{row.Event}}</a>
                    </td>
                    <td data-label="Run #" class="center">
                        <a href="http://www.parkrun.org.uk/{{row.Event | slug }}/results/weeklyresults?runSeqNumber={{row.RunNumber}}">{{row.RunNumber}}</a>
                    </td>
                    <td data-label="Position" class="center">{{row.Position}}</td>
                    <td data-label="Time" class="center">{{row.Time | time}}</td>
                    <td data-label="Age Grade" class="center">{{row.AgeGrade}}%</td>
                    <td data-label="PB?" class="center">
                        {% if row.PB %}
                            {% include "pb-medal.svg" %}
                        {% else %}
                    &nbsp;
                    {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="center" colspan="7">Nothing to show</td>
                </tr>
            {% endfor %}

        {% else %}
            <tr>
                <td class="center" colspan="7">Nothing to show</td>
            </tr>
        {% endfor %}
    </tbody>
</table>